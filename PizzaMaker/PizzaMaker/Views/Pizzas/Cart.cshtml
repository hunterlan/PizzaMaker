@model IEnumerable<PizzaMaker.Models.PizzaCount>

@{
    ViewData["Title"] = "Index";
}

@if ((int)ViewData["CountList"] == 0)
{
    <h3>Cart is empty!</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    <h3>Cart</h3>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @if (item.count > 0)
                {
                    <tr>
                        <td>
                            <img alt="" src="data:image/png;base64, @Convert.ToBase64String(item.pizza.Image)" style="height:50px;width:50px;" />
                        </td>
                        <td>
                            <h5>@Html.DisplayFor(modelItem => item.pizza.Name)</h5>
                        </td>
                        <td>
                            x @Html.DisplayFor(modelItem => item.count)<br />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.pizza.Price) ₴
                        </td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td>
                    <h3>Total</h3>
                </td>
                <td></td>
                <td></td>
                <td>
                    @ViewData["TotalPrice"]₴
                </td>
            </tr>

        </tfoot>
    </table>

    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputName">Your name</label>
                <input type="text" class="form-control" id="NameReciver" placeholder="Vasya">
            </div>
            <div class="form-group col-md-6">
                <label for="inputAddress">Address</label>
                <input type="text" class="form-control" id="Adress" placeholder="1234 Main St">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPhone">Phone number</label>
            <input type="text" class="form-control" id="Phone" placeholder="+380971234567">
        </div>
        <button type="submit" class="btn btn-primary">Make order</button>
    </form>
}
