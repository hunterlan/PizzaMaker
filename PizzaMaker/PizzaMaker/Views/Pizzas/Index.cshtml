@model IEnumerable<PizzaMaker.Models.Pizza>

@{
    ViewData["Title"] = "Index";
}

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog modal-lg"></div>
</div>
<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <a class="compItem" asp-action="Details" asp-route-id="@item.ID" style="color: black; text-decoration: none;">
                <div class="d-flex justify-content-center shadow-sm col-md-auto">
                    <img alt="" src="data:image/png;base64, @Convert.ToBase64String(item.Image)" style="height:100px;width:100px; padding-right: 1em;" />
                    @Html.DisplayFor(modelItem => item.Name)<br />
                    @Html.DisplayFor(modelItem => item.Recipe)<br />
                    @Html.DisplayFor(modelItem => item.Price) ₴ <br />
                    <!--<div style="padding-left: 1em">
                        <button>Add to cart</button>
                    </div>-->
                </div>
            </a>
        </div>
    }
</div>

@section scripts
{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
           $(".compItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}