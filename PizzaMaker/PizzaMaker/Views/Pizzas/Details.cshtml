@model PizzaMaker.Models.Pizza

@{
    ViewData["Title"] = "Pizza";
}

<div class="modal-content">
    <div class="modal-header">
        <!--<button class="close" data-dismiss="modal" area-hidden="true">X</button>-->
        <h1 style="font-family: 'MuseoModerno', cursive; text-align: center;">@Html.DisplayFor(model => model.Name)</h1>
    </div>
    <div class="modal-body">
        <div class="modal-body">
            <form method="post" action="/Pizzas/Details">
                <div class="text-center">
                    <img alt="" class="justify-content-center" src="data:image/png;base64, @Convert.ToBase64String(Model.Image)" />
                </div>
                <p class="lead">@Html.DisplayFor(model => model.Description)</p>
                <div class="d-flex justify-content-between col-md-auto">
                    <h4>@Html.DisplayFor(model => model.Price) ₴</h4>
                    <input type="hidden" name="ID" value="@Model.ID" />
                    <input type="submit" value="Add to cart" />
                </div>
            </form>
        </div>
    </div>
</div>
